{
  "image": "mcr.microsoft.com/devcontainers/universal:3",
  "features": {
    "ghcr.io/jdx/mise/devcontainer-feature/mise:1": {}
  },
  "mounts": [
    "source=mise-data-volume,target=/mnt/mise-data,type=volume"
  ],
  "remoteEnv": {
    "MISE_DATA_DIR": "/mnt/mise-data"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "jdxcode.mise-vscode",
        "DavidAnson.vscode-markdownlint",
        "esbenp.prettier-vscode",
        "timonwong.shellcheck"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },
  "postCreateCommand": "sudo chown -R $(id -u):$(id -g) /mnt/mise-data && mise trust --yes && mise install && eval \"$(mise activate bash)\" && mise run setup",
  "postStartCommand": "mise trust --yes || true"
}